<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_simple_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="simple target" />

        <Button
            android:id="@+id/btn_simple_target_specific_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="simple target specific size" />

        <Button
            android:id="@+id/btn_view_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="view target" />

        <ImageView
            android:id="@+id/iv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.eggsy.glide.sample.view.CustomTargetView
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>